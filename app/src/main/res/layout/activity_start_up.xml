<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chinz_000.silverchef.StartUp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="380dp"
        android:layout_height="509dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="FIND A COACH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/titletext"
                    android:textAlignment="center"
                    android:textSize="40sp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="Dish: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dishtext"
                        android:layout_weight="1"
                        android:textSize="20sp"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="text|textShortMessage"
                        android:ems="10"
                        android:id="@+id/editText" android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:text="Date:"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/datetext" android:layout_weight="0.08"
                        android:textSize="20sp"
                        android:layout_gravity="left"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/datespinner"
                        android:layout_gravity="left"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/monthspinner"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/yearspinner"/>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="Time:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/timetext" android:layout_weight="1"
                        android:textSize="20sp"/>
                    <Spinner
                        android:id="@+id/hourspinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/btn_dropdown"
                        android:spinnerMode="dropdown" />
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/minspinner"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ampmspinner"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:text="Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/submitbutton" android:elevation="0dp"/>
    </LinearLayout>
</LinearLayout>
